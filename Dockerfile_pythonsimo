FROM tsarpf/pythonbase:latest

RUN rm -rf /pythonsimo

RUN git clone https://github.com/code-n-beer/SimoBotPython /pythonsimo
WORKDIR /pythonsimo

RUN pip install -r requirements.txt
COPY settings_pythonsimo.cfg /pythonsimo/Resources/settings.cfg

COPY pythonsimo-data/w2v* /pythonsimo/Resources/

EXPOSE 8888
CMD python main.py
